---
import vueLogo from "../../assets/logos/vue.svg";
import CodeBlock from "../CodeBlock.astro";
import FrameworkContainer from "../FrameworkContainer.astro";
import PerformanceBadge from "../PerformanceBadge.astro";
import NestedCheckboxes from "./VueNestedCheckboxes.vue";
import stats from "./stats.json";

const code = await import("./VueNestedCheckboxes.vue?raw").then(
	(m) => m.default,
);
---

<FrameworkContainer framework="vue" title="Vue">
  <PerformanceBadge 
    renderTime={stats.renderTime} 
    bundleSize={stats.bundleSize}
  />
  <NestedCheckboxes client:only="vue" />
  <CodeBlock 
    code={code} 
    displayName="Vue" 
    lang="vue" 
    logo={vueLogo}
  />
</FrameworkContainer> 