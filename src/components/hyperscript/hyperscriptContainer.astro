---
import hyperscriptLogo from "../../assets/logos/hyperscript.svg";
import CodeBlock from "../../components/shared/CodeBlock.astro";
import FrameworkContainer from "../../components/shared/FrameworkContainer.astro";
import PerformanceBadge from "../../components/shared/PerformanceBadge.astro";
import Hyperscript from "./hyperscript.astro";
import stats from "./stats.json";

const code = await import("./hyperscript.astro?raw").then((m) => m.default);
---
<script src="/src/scripts/hyperscript.min.js"></script>

<FrameworkContainer framework="hyperscript" title="Hyperscript">
  <PerformanceBadge 
    renderTime={stats.renderTime} 
    bundleSize={stats.bundleSize}
  />
  <Hyperscript />
  <CodeBlock 
    code={code} 
    displayName="Hyperscript" 
    lang="javascript" 
    logo={hyperscriptLogo}
  />
</FrameworkContainer> 