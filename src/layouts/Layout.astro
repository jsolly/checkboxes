---
import GithubIcon from "../assets/github.svg?raw";

interface Props {
	title?: string;
}

const { title = "checkboxes.xyz" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<script src="https://unpkg.com/hyperscript.org@0.9.13"></script>
		<meta name="theme-color" content="#f8fafc" />
	</head>
	<body>
		<slot />
		<footer class="group flex justify-center mt-5 mb-16">
			<a
				href="https://github.com/jsolly/checkboxes"
				target="_blank"
				rel="noopener noreferrer"
				class="flex items-center justify-center content-center text-xs text-slate-500 hover:text-slate-700 transition-colors gap-1"
			>
				<Fragment set:html={GithubIcon} class="w-5 h-5" />
				View Source
			</a>
		</footer>
	</body>
</html>

<style is:global>
  .framework-container {
    transition: all 0.3s ease;
    backdrop-filter: blur(12px);
    position: relative;
    overflow: hidden;
  }

  .framework-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 80px;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.08), transparent);
    pointer-events: none;
  }

  .framework-container:hover {
    border-color: rgba(99, 102, 241, 0.3);
    background-color: rgba(255, 255, 255, 0.95);
  }

  .framework-container.dragging {
    transform: scale(1.02);
    opacity: 0.95;
    box-shadow: 0 25px 50px -12px rgb(0 0 0 / 0.25);
  }

  .sortable-ghost {
    opacity: 0.3;
    background: theme(colors.slate.100);
  }

  footer a {
    transition: all 0.3s ease;
  }
</style>
