---
import GithubIcon from "../assets/github.svg?raw";

interface Props {
	title?: string;
}

const { title = "checkboxes.xyz" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>
	</head>
	<body>
		<slot />
		<footer class="group flex justify-center mt-5 mb-16">
			<a
				href="https://github.com/jsolly/checkboxes"
				target="_blank"
				rel="noopener noreferrer"
				class="flex items-center justify-center content-center text-xs text-slate-500 hover:text-slate-700 transition-colors"
			>
				<Fragment set:html={GithubIcon} class="w-5 h-5 mr-2" />
				View Source
			</a>
		</footer>
	</body>
</html>

<style is:global>
  /* Your global styles here */
</style>
